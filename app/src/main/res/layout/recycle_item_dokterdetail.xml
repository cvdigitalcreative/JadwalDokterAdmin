<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_namadokter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Dokter : "
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tv_alamatdokter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alamat Dokter : "
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tv_jenisKelamin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jenis Kelamin : "
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tv_noTlp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Telepon : "
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/tv_rsLainnya"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rumah Sakit Lainnya : "
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>